<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="100dp"
    android:height="100dp"
    android:viewportWidth="550"
    android:viewportHeight="550"
    >
    <path
        android:pathData="M0, 150 L550,150 L275, 500 Z">

        <aapt:attr name="android:fillColor">

            <gradient
                android:gradientRadius="350"
                android:centerX="275"
                android:centerY="500"
                android:type="radial"
                >
                <!--                #4B8CA0-->
                <item android:offset="0" android:color="#4B8CA0"/>
                <item android:offset="1" android:color="#004B8CA0"/>
            </gradient>

        </aapt:attr>
    </path>
</vector>


